{
  "version": 1,
  "canisters": {
    "onchain360_backend": {
      "type": "rust",
      "package": "onchain360_backend",
      "root": "backend",
      "candid": "backend/onchain360_backend.did",
      "wasm": "target/wasm32-unknown-unknown/release/onchain360_backend.wasm",
      "build": "cargo build --release --target wasm32-unknown-unknown --package onchain360_backend"
    },
    "frontend": {
      "type": "assets",
      "source": ["frontend/public"],
      "build": "echo 'Building frontend...' && exit 0"
    }
  },
  "networks": {
    "local": {
      "bind": "127.0.0.1:8000",
      "type": "ephemeral"
    },
    "ic": {
      "providers": ["https://ic0.app"]
    }
  },
  "defaults": {
    "build": {
      "packtool": "esbuild"
    },
    "network": "local"
  }
}